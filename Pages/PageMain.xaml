<Page x:Class="ElectronicDiary.Pages.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectronicDiary.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Grid.Row="0" Width="230">
            <Button x:Name="btnClasses" Margin="0 0 0 10" Content="Классы" Click="btnClasses_Click"/>
            <Button x:Name="btnScores" Margin="0 0 0 10" Content="Оценки" Click="btnScores_Click"/>
            <Button x:Name="btnDis" Margin="0 0 0 10" Content="Предметы" Click="btnDis_Click"/>
            <Button x:Name="btnTeac" Margin="0 0 0 10" Content="Учителя" Click="btnTeac_Click"/>
            <Button x:Name="btnStud" Margin="0 0 0 10" Content="Ученики" Click="btnStud_Click"/>
            <Button x:Name="btnExit" Content="Выйти" Click="btnExit_Click"/>
        </StackPanel>
    </Grid>
</Page>
