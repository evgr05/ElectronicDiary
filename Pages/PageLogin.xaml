<Page x:Class="ElectronicDiary.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectronicDiary.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <StackPanel 
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <StackPanel
                Orientation="Horizontal">
                <TextBlock
                    Text="Логин: "
                    Width="150"/>
            </StackPanel>
            <TextBox x:Name="txbLogin"/>
            <StackPanel
                Orientation="Horizontal">
                <TextBlock
                Text="Пароль: "
                Width="150"/>
            </StackPanel>
            <PasswordBox x:Name="psbPassword"/>
            <StackPanel
                Orientation="Horizontal">
                <Button 
                    x:Name="btnLogin"
                    Content="Войти" Width="150" Margin="0 10 0 0" Click="btnLogin_Click"/>

                
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
