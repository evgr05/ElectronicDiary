<Page x:Class="ElectronicDiary.Pages.PageAddEditTeac"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectronicDiary.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAddEditTeac">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
        VerticalAlignment="Center">
            <TextBlock Text="ФИО учителя:"/>
            <TextBox x:Name="txbName"
                    Text="{Binding FullName}"/>
            <TextBlock Text="Адрес: "/>
            <TextBox x:Name="txAdress"
                    Text="{Binding Adress}"/>
            <TextBlock Text="Номер телефона: "/>
            <TextBox x:Name="txPhone"
                    Text="{Binding Phone}"/>



            <Button x:Name="saveBtn" Content="Сохранить" Margin="0 0 0 10" Click="saveBtn_Click"/>
            <Button x:Name="bckBtn" Content="Отмена" Click="bckBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
